# =============================================================================
# ENVIRONMENT CONFIGURATION - EXAMPLE FILE
# =============================================================================
# Copy this file to .env and fill in your actual values
# Command: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Environment: development | staging | production
NODE_ENV=development

# Application Name
NEXT_PUBLIC_APP_NAME="Rest API Maker"

# Application URL (Base URL for the application)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# Backend API Base URL (Must start with NEXT_PUBLIC_ to be available in browser)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api

# API Timeout (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# API Version (optional)
NEXT_PUBLIC_API_VERSION=v1

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# -----------------------------------------------------------------------------
# NextAuth.js Secret (Generate using: openssl rand -base64 32)
NEXTAUTH_SECRET=generate-a-secret-key-using-openssl-rand-base64-32

# NextAuth URL (Full URL with protocol)
NEXTAUTH_URL=http://localhost:3000

# NextAuth Base Path (default: /api/auth)
NEXTAUTH_BASEPATH=/api/auth

# Session Configuration (in seconds - default: 30 days)
NEXTAUTH_SESSION_MAX_AGE=2592000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# Enable/Disable specific features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# Third-Party Services (Optional)
# -----------------------------------------------------------------------------
# Google OAuth (if using)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (if using)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Service (if using)
# EMAIL_SERVER_HOST=smtp.example.com
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER=your-email@example.com
# EMAIL_SERVER_PASSWORD=your-email-password
# EMAIL_FROM=noreply@example.com

# -----------------------------------------------------------------------------
# Database (Optional - if you add database later)
# -----------------------------------------------------------------------------
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# -----------------------------------------------------------------------------
# Monitoring & Analytics (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN (Error Tracking)
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Enable debug mode in development
NEXT_PUBLIC_DEBUG=false

# Show detailed error messages
NEXT_PUBLIC_SHOW_ERROR_DETAILS=true

# -----------------------------------------------------------------------------
# Documentation & External Links
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DOCS_URL=https://docs.yourapp.com
NEXT_PUBLIC_SUPPORT_EMAIL=support@yourapp.com

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

